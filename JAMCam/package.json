{
  "name": "jamcam",
  "version": "1.0.0",
  "description": "JAMCam - JVID Video Streaming Test Application",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "jamnet",
    "jvid",
    "video",
    "streaming",
    "toast",
    "low-latency"
  ],
  "author": "JAMNet Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "bonjour": "^3.5.0",
    "buffer": "^6.0.3",
    "crc": "^4.3.2",
    "dgram": "^1.0.1",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "jimp": "^0.22.10",
    "playwright": "^1.53.2",
    "ws": "^8.14.2"
  },
  "build": {
    "appId": "com.jamnet.jamcam",
    "productName": "JAMCam",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.video",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
